		${EP_CMAKE_DEFAULT_CONFIGURE_CACHE_ARGS}
		"-DProtobuf_USE_STATIC_LIBS:BOOL=TRUE"
		"-DZLIB_USE_STATIC_LIBS:BOOL=TRUE"
		"-DOPENCV_ENABLE_NONFREE:BOOL=TRUE"
		# "-DOPENCV_EXTRA_MODULES_PATH:PATH=${OPENCV_EXTRA_MODULES_PATH}"
